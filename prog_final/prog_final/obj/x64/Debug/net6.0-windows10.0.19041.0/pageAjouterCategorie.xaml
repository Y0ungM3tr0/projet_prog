<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="prog_final.pageAjouterCategorie"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:prog_final"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='2'
            Grid.Row="0"
            Grid.Column="0"
            x:Name="titre"
            FontSize="25"
            HorizontalAlignment="Center"
            >
            ajouter une categories
        </TextBlock>

        <StackPanel 
            Grid.Row="1" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='13'
                x:Name="tbx_type"
                Header="categorie:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >   
            </TextBox>
            <TextBlock x:ConnectionId='14'
                x:Name="typeErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >   
            </TextBlock>
            <Button x:ConnectionId='15'
                Width="100" Height="40"
                HorizontalAlignment="Center"
                                     
                >
                ajouter
            </Button>
        </StackPanel>

       
        
        <TextBlock x:ConnectionId='3'
            Grid.Row="0"
            Grid.Column="1"
            x:Name="titreModifierGridv"
            FontSize="25"
            HorizontalAlignment="Center"
            >
            modifier une categories
        </TextBlock>

        <GridView x:ConnectionId='4' x:Name="gv_categorie" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"                                                  HorizontalAlignment="Center">
            <GridView.ItemTemplate>
                <DataTemplate                              >
                    <StackPanel x:ConnectionId='9' x:Name="produitCard" Margin="15" Background="White" CornerRadius="5" Width="500" HorizontalAlignment="Stretch">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Stretch">
                                <TextBlock x:ConnectionId='12'                      FontSize="25" Margin="15,15,0,0" FontFamily="Arial rouded" TextTrimming="WordEllipsis"/>
                            </StackPanel>

                            <Button x:ConnectionId='10' 
                                                         
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="1"
                                FontSize="19"
                                Width="140" Height="40"
                                >
                                Modifier
                            </Button>
                            <Button x:ConnectionId='11' 
                                                      
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Grid.Row="1" Grid.Column="0"
                                FontSize="19"
                                Width="140" Height="40"
                                >
                                Supprimer
                            </Button>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>





        <TextBlock x:ConnectionId='5'
            Grid.Row="0"
            Grid.Column="2"
            x:Name="titreModifier"
            FontSize="25"
            HorizontalAlignment="Center"
            >
            ajouter une categories
        </TextBlock>

        <StackPanel 
            Grid.Row="1" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='6'
                x:Name="tbxmodifier_type"
                Header="categorie:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock x:ConnectionId='7'
                x:Name="typemodifierErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
            <Button
                Width="160" Height="40"
                HorizontalAlignment="Center"
                >
                modifier la categorie
            </Button>
        </StackPanel>


    </Grid>
</Page>


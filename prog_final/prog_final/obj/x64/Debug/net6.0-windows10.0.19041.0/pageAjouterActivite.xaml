<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="prog_final.pageAjouterActivite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:prog_final"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
       
        
        
        <TextBlock x:ConnectionId='2'
            Grid.Row="0"
            Grid.Column="0"
            x:Name="titre"
            FontSize="35"
            HorizontalAlignment="Center"
            >
            ajouter une activitée
        </TextBlock>

        <StackPanel 
            Grid.Row="1" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='34'
                x:Name="tbx_nom_activite"
                Header="nom_activite:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock x:ConnectionId='35'
                x:Name="nom_activiteErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >   
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="2" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <ComboBox x:ConnectionId='32'
                x:Name="cbx_type"
                Header="Categorie:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                >
            </ComboBox>
            <TextBlock x:ConnectionId='33'
                x:Name="typeErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="3" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='30'
                x:Name="tbx_description"
                Header="description:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >   
            </TextBox>
            <TextBlock x:ConnectionId='31'
                x:Name="descriptionErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>


        <StackPanel 
            Grid.Row="4" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='28'
                x:Name="tbx_cout_organisation"
                Header="tbx_cout_organisation:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock x:ConnectionId='29'
                x:Name="cout_organisationErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="5" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='26'
                x:Name="tbx_prix_vente_client"
                Header="tbx_prix_vente_client:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock x:ConnectionId='27'
                x:Name="prix_vente_clientErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <Button x:ConnectionId='3'
            Grid.Row="6"
            Grid.Column="0"
            Width="100" Height="40"
            HorizontalAlignment="Center"
                                 
            >
            ajouter
        </Button>



        <TextBox 
            Header="recherche activite (par nom)"
            PlaceholderText="ex: gym"
            Grid.Column="1"
            Grid.Row="0"
            Height="90" Width="400"
            FontSize="18"
            >
            
        </TextBox>
        
        <GridView x:ConnectionId='4' x:Name="gv_activite"                                                 HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.RowSpan="6">
            <GridView.ItemTemplate>
                <DataTemplate                             >
                    <StackPanel x:ConnectionId='18' x:Name="produitCard" Margin="15" Background="White" CornerRadius="5" Width="450" HorizontalAlignment="Stretch">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Stretch">
                                <TextBlock x:ConnectionId='21'                              FontSize="25" Margin="15,15,0,0" FontFamily="Arial rouded" TextTrimming="WordEllipsis"/>
                                <TextBlock x:ConnectionId='22'                             FontSize="25" Margin="15,15,0,0" FontFamily="Arial rouded" TextTrimming="WordEllipsis"/>
                                <TextBlock x:ConnectionId='23'                               FontSize="25" Margin="15,15,0,0" FontFamily="Arial rouded" TextTrimming="WordEllipsis"/>
                                <TextBlock x:ConnectionId='24'                                   FontSize="25" Margin="15,15,0,0" FontFamily="Arial rouded" TextTrimming="WordEllipsis"/>
                                <TextBlock x:ConnectionId='25'                                   FontSize="25" Margin="15,15,0,0" FontFamily="Arial rouded" TextTrimming="WordEllipsis"/>
                            </StackPanel>

                            <Button x:ConnectionId='19' 
                                                    
                                HorizontalAlignment="Center"
                                Grid.Column="0"
                                Grid.Row="5"
                                FontSize="19"
                                Width="150" Height="40"
                                >
                                modifier
                            </Button>
                            <Button x:ConnectionId='20' 
                                                      
                                HorizontalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="5"
                                FontSize="19"
                                Width="150" Height="40"
                                >   
                                Supprimer
                            </Button>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>












        <TextBlock x:ConnectionId='5'
            Grid.Row="0"
            Grid.Column="2"
            x:Name="titre_modifier"
            FontSize="35"
            HorizontalAlignment="Center"
            >
            modifier une activitée
        </TextBlock>

        <StackPanel 
            Grid.Row="1" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='15'
                x:Name="tbxModifier_nom_activite"
                Header="nom_activite:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >   
            </TextBox>
            <TextBlock x:ConnectionId='16'
                x:Name="nom_activiteErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="2" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <ComboBox x:ConnectionId='13'
                x:Name="cbxModifier_type"
                Header="Categorie:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                >
            </ComboBox>
            <TextBlock x:ConnectionId='14'
                x:Name="typeErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="3" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='11'
                x:Name="tbxModifier_description"
                Header="description:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock x:ConnectionId='12'
                x:Name="descriptionErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="4" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='9'
                x:Name="tbxModifier_cout_organisation"
                Header="tbx_cout_organisation:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock x:ConnectionId='10'
                x:Name="cout_organisationErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="5" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox x:ConnectionId='7'
                x:Name="tbxModifier_prix_vente_client"
                Header="tbx_prix_vente_client:"
                Margin="5"
                Width="240" Height="75"
                FontSize="18" 
                PlaceholderText="ex: "
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock x:ConnectionId='8'
                x:Name="prix_vente_clientErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <Button x:ConnectionId='6'
            Grid.Row="6"
            Grid.Column="2"
            Width="100" Height="40"
            HorizontalAlignment="Center"
                                      
            >
            modifier
        </Button>


















    </Grid>
</Page>


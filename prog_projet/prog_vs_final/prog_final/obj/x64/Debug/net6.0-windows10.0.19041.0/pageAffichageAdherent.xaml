<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="prog_final.pageAffichageAdherent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:prog_final"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>


        <TextBlock x:ConnectionId='2'
            x:Name="message_reussite"
            FontSize="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Foreground="Green"
            Margin="0 0 0 20"
            Visibility="Collapsed"
            >
            Modification ou Suppression réussite
        </TextBlock>

        <GridView x:ConnectionId='3' x:Name="gv_adherent" Grid.Row="1"                                                 HorizontalAlignment="Center">
            <GridView.ItemTemplate>
                <DataTemplate                             >
                    <StackPanel x:ConnectionId='15' x:Name="produitCard" Margin="15" Background="White" CornerRadius="5" Width="650" HorizontalAlignment="Center">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch">
                                <TextBlock Margin="15,15,0,0" FontSize="25">
                                    <Run Text="Matricule:"/>
                                    <Run x:ConnectionId='23' FontWeight="Light"                          />
                                </TextBlock>
                                <TextBlock Margin="15,15,0,0" FontSize="25">
                                    <Run Text="Prenom:"/>
                                    <Run x:ConnectionId='22' FontWeight="Light"                       />
                                </TextBlock>
                                <TextBlock Margin="15,15,0,0" FontSize="25">
                                    <Run Text="Nom:"/>
                                    <Run x:ConnectionId='21' FontWeight="Light"                    />
                                </TextBlock>
                                <TextBlock Margin="15,15,0,0" FontSize="25">
                                    <Run Text="Adresse:"/>
                                    <Run x:ConnectionId='20' FontWeight="Light"                        />
                                </TextBlock>
                                <TextBlock Margin="15,15,0,0" FontSize="25">
                                    <Run Text="Date de naissance:"/>
                                    <Run x:ConnectionId='19' FontWeight="Light"                                      />
                                </TextBlock>
                                <TextBlock Margin="15,15,0,0" FontSize="25">
                                    <Run Text="Age:"/>
                                    <Run x:ConnectionId='18' FontWeight="Light"                    />
                                </TextBlock>
                            </StackPanel>

                            <Button x:ConnectionId='16' 
                                                          
                                VerticalAlignment="Center"
                                Grid.Column="2"
                                Grid.Row="0"
                                FontSize="19"
                                Width="150" Height="40"
                                >
                                <SymbolIcon Symbol="Edit"/>
                            </Button>

                            <Button x:ConnectionId='17' 
                                                      
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Grid.Column="2"
                                Grid.Row="1"
                                FontSize="19"
                                Width="150" Height="40"
                                >
                                <SymbolIcon Symbol="Delete" Foreground="Red"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:ConnectionId='4' 
                x:Name="titre"
                FontSize="40"
                Margin="0 30 0 0"
                FontWeight="Light"
                HorizontalAlignment="Center"
                Grid.Row="0"
                >
                Modifier l'adherent:
            </TextBlock>

            <StackPanel Grid.Row="1">
                <TextBox x:ConnectionId='12'
                    x:Name="tbx_nom"
                    Header="Nom:"
                    Margin="5"
                    Width="280" Height="75"
                    FontSize="18" 
                    PlaceholderText="Votre nom de famille"
                    PlaceholderForeground="DarkGray"
                    >
                </TextBox>
                <TextBlock x:ConnectionId='13'
                    x:Name="nomErr"
                    FontSize="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Foreground="DarkRed"
                    >
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBox x:ConnectionId='10'
                    x:Name="tbx_prenom"
                    Header="Prénom:"
                    Margin="5"
                    Width="280" Height="75"
                    FontSize="18" 
                    PlaceholderText="Votre prénom"
                    PlaceholderForeground="DarkGray"
                    >
                </TextBox>
                <TextBlock x:ConnectionId='11'
                    x:Name="prenomErr"
                    FontSize="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Foreground="DarkRed"
                    >
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="3">
                <TextBox x:ConnectionId='8'
                    x:Name="tbx_adresse"
                    Header="Adresse:"
                    Margin="5"
                    Width="280" Height="75"
                    FontSize="18" 
                    PlaceholderText="123 Rue Guilbert"
                    PlaceholderForeground="DarkGray"
                    >
                </TextBox>
                <TextBlock x:ConnectionId='9'
                    x:Name="adresseErr"
                    FontSize="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Foreground="DarkRed"
                    >
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="4">
                <DatePicker x:ConnectionId='6'
                    x:Name="datepicker_date_seance"
                    Header="Choisir la date:"
                    Margin="5"
                    Width="500" Height="75"
                    FontSize="18" 
                    HorizontalAlignment="Center"
                    >
                </DatePicker>
                <TextBlock x:ConnectionId='7'
                     x:Name="datepicker_date_seanceErr"
                     FontSize="15"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Bottom"
                     Foreground="DarkRed"
                     >
                </TextBlock>
            </StackPanel>

            <Button x:ConnectionId='5' 
                Grid.Row="6"
                x:Name="btn_modifier_bd"
                Margin="5"
                Width="240" Height="65"
                FontSize="18"
                HorizontalAlignment="Center"
                                             
                >
                Modifier l'adherent
            </Button>
        </Grid>





    </Grid>
</Page>


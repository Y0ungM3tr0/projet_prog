<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="prog_final.pageModifierSeance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:prog_final"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock x:ConnectionId='2' 
            x:Name="titre_gv"
            FontSize="30"
            HorizontalAlignment="Center"
            Margin="0 15 0 0"
            Grid.Row="0"
            Grid.Column="0"
            >
            Sélectionner une séance pour la modifier
        </TextBlock>
        <TextBlock x:ConnectionId='3'
            x:Name="message_reussite"
            FontSize="15"
            HorizontalAlignment="Center"
            Foreground="Green"
            Margin="0 90 0 0"
            Grid.Row="0"
            Visibility="Collapsed"
             >
            Modification ou Suppression réussite
        </TextBlock>

        <GridView x:ConnectionId='4' x:Name="gv_seance" Grid.Column="0" Grid.Row="1" Grid.RowSpan="6" Margin="0 -50 0 0"                                               HorizontalAlignment="Center">
            <GridView.ItemTemplate>
                <DataTemplate                           >
                    <StackPanel x:ConnectionId='16' x:Name="produitCard" Margin="15" Background="White" CornerRadius="5" Width="700" HorizontalAlignment="Stretch">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch">
                                <TextBlock x:ConnectionId='24'                             FontSize="27" Margin="15 15 0 0" FontFamily="Arial rouded" TextTrimming="WordEllipsis"/>
                            </StackPanel>


                            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="15 20 0 0" HorizontalAlignment="Stretch">
                                <TextBlock FontSize="25" Margin="5">
                                    <Run Text="Date:"/>
                                    <Run x:ConnectionId='23' FontWeight="Light"                                   />
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="0" Grid.Row="2" Margin="15 20 0 0" HorizontalAlignment="Stretch">
                                <TextBlock FontSize="25" Margin="5">
                                    <Run Text="Heure:"/>
                                    <Run x:ConnectionId='22' FontWeight="Light"                      />
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="0" Grid.Row="3" Margin="15 20 0 0" HorizontalAlignment="Stretch">
                                <TextBlock FontSize="25" Margin="5">
                                    <Run Text="Nombre d'inscription:"/>
                                    <Run x:ConnectionId='21' FontWeight="Light"                                />
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="0" Grid.Row="4" Margin="15 20 0 0" HorizontalAlignment="Stretch">
                                <TextBlock FontSize="25" Margin="5">
                                    <Run Text="Nombre de place(s):"/>
                                    <Run x:ConnectionId='20' FontWeight="Light"                                     />
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="0" Grid.Row="5" Margin="15 20 0 15" HorizontalAlignment="Stretch">
                                <TextBlock FontSize="25" Margin="5">
                                    <Run Text="Moyenne de l'appréciation:"/>
                                    <Run x:ConnectionId='19' FontWeight="Light"                                     />
                                </TextBlock>
                            </StackPanel>

                            <Button x:ConnectionId='17' 
                                                          
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="3"
                                FontSize="19"
                                Width="150" Height="40"
                                HorizontalAlignment="Center"
                                >
                                <SymbolIcon Symbol="Edit"/>
                            </Button>

                            <Button x:ConnectionId='18' 
                                                      
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="5"
                                FontSize="19"
                                Width="150" Height="40"
                                >
                                <SymbolIcon Symbol="Delete" Foreground="Red"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <TextBlock x:ConnectionId='5' 
            x:Name="titre"
            FontSize="30"
            HorizontalAlignment="Center"
            Margin="0 15 0 0"
            Grid.Row="0"
            Grid.Column="1"
            >
            Modifier une Scéance
        </TextBlock>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <ComboBox x:ConnectionId='13'
                x:Name="cbx_Activite"
                Header="Choisir l'activité:"
                Margin="5"
                HorizontalAlignment="Center"
                Width="280" Height="75"
                FontSize="18" 
                >
            </ComboBox>
            <TextBlock x:ConnectionId='14'
                 x:Name="cbx_ActiviteErr"
                 FontSize="15"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 Foreground="DarkRed"
                 >
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="1">
            <DatePicker x:ConnectionId='11'
                x:Name="datepicker_date_seance"
                Header="Choisir la date:"
                Margin="5"
                HorizontalAlignment="Center"
                Width="500" Height="75"
                FontSize="18" 
                >
            </DatePicker>
            <TextBlock x:ConnectionId='12'
                 x:Name="datepicker_date_seanceErr"
                 FontSize="15"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 Foreground="DarkRed"
                 >
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1">
            <TextBox x:ConnectionId='9'
                 x:Name="tbx_heure"
                 Header="Heure:"
                 Margin="5"
                 Width="280" Height="75"
                 FontSize="18" 
                 PlaceholderText="ex: 12:00"
                 PlaceholderForeground="DarkGray"
                 >
            </TextBox>
            <TextBlock x:ConnectionId='10'
                 x:Name="tbx_heureErr"
                 FontSize="15"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 Foreground="DarkRed"
                 >
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <TextBox x:ConnectionId='7'
                 x:Name="tbx_nbrPlaceDispo"
                 Header="Nombre de place disponible:"
                 Margin="5"
                 Width="280" Height="75"
                 FontSize="18" 
                 PlaceholderText="ex: 20"
                 PlaceholderForeground="DarkGray"
                 >
            </TextBox>
            <TextBlock x:ConnectionId='8'
                 x:Name="tbx_nbrPlaceDispoErr"
                 FontSize="15"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Bottom"
                 Foreground="DarkRed"
                 >
            </TextBlock>
        </StackPanel>

        <Button x:ConnectionId='6' 
            Grid.Row="5"
            Grid.Column="1"
            Margin="5"
            Width="150" Height="40"
            FontSize="18"
            HorizontalAlignment="Center"
                                         
            Visibility="Collapsed"
            x:Name="btn_modifier_BD"
            >
            <SymbolIcon Symbol="Edit"/>
        </Button>
    </Grid>
</Page>


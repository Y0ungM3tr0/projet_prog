<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="prog_final.pageAjouterActivite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:prog_final"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            x:Name="titre"
            FontSize="35"
            HorizontalAlignment="Center"
            Margin="5 25 5 5"
            >
            Ajouter une activité
        </TextBlock>

        <StackPanel 
            Grid.Row="1" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox
                x:Name="tbx_nom_activite"
                Header="Nom de l'activité:"
                Margin="5"
                Width="280" Height="75"
                FontSize="18"
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock
                x:Name="nom_activiteErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="2" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <ComboBox
                x:Name="cbx_type"
                Header="Catégorie de l'activité:"
                Margin="5"
                Width="280" Height="75"
                FontSize="18" 
                >
            </ComboBox>
            <TextBlock
                x:Name="typeErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="3" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox
                x:Name="tbx_description"
                Header="Description de l'activité:"
                Margin="5 0 5 5"
                Width="280" Height="100"
                FontSize="18"
                PlaceholderForeground="DarkGray"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                >
            </TextBox>
            <TextBlock
                x:Name="descriptionErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>


        <StackPanel 
            Grid.Row="4" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox
                x:Name="tbx_cout_organisation"
                Header="Coût d'organisation:"
                Margin="5"
                Width="280" Height="75"
                FontSize="18"
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock
                x:Name="cout_organisationErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="5" Grid.Column="0"
            HorizontalAlignment="Center"
            >
            <TextBox
                x:Name="tbx_prix_vente_client"
                Header="Prix de vente par client:"
                Margin="5"
                Width="280" Height="75"
                FontSize="18"
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock
                x:Name="prix_vente_clientErr"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <Button
            Grid.Row="6"
            Grid.Column="0"
            Width="100" Height="40"
            HorizontalAlignment="Center"
            Click="add_btn_Click"
            FontSize="15"
            >
            <SymbolIcon Symbol="Add"/>
        </Button>

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            x:Name="titre_1"
            FontSize="35"
            HorizontalAlignment="Center"
            Margin="5 25 5 0"
            >
            Liste des activités
        </TextBlock>

        <TextBlock
            x:Name="message_reussite"
            FontSize="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Foreground="Green"
            Grid.Column="1"
            >
        </TextBlock>

        <GridView x:Name="gv_activite" SelectionChanged="gv_activite_SelectionChanged" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.RowSpan="6">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:Activite" >
                    <StackPanel x:Name="produitCard" Margin="15" Background="White" CornerRadius="5" Width="575" Height="285" HorizontalAlignment="Stretch">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Stretch" Margin="15 5 15 0">
                                <TextBlock FontSize="20" Margin="5">
                                    <Run Text="Activité:"/>
                                    <Run FontWeight="Light" Text="{x:Bind Nom_activite}"/>
                                </TextBlock>

                                <TextBlock FontSize="20" Margin="5" TextWrapping="Wrap">
                                    <Run Text="Description:"/>
                                    <Run FontWeight="Light" Text="{x:Bind Description}"/>
                                </TextBlock>

                                <TextBlock FontSize="20" Margin="5">
                                    <Run Text="Catégorie:"/>
                                    <Run FontWeight="Light" Text="{x:Bind TypeCategorie}"/>
                                </TextBlock>

                                <TextBlock FontSize="20" Margin="5">
                                    <Run Text="Coût d'organisation:"/>
                                    <Run FontWeight="Light" Text="{x:Bind Cout_organisation}"/>
                                </TextBlock>

                                <TextBlock FontSize="20" Margin="5">
                                    <Run Text="Prix de vente par client:"/>
                                    <Run FontWeight="Light" Text="{x:Bind Prix_vente_client}"/>
                                </TextBlock>
                            </StackPanel>

                            <Button 
                                Click="btn_modifier"
                                HorizontalAlignment="Center"
                                Grid.Column="0"
                                Grid.Row="5"
                                FontSize="19"
                                Width="150" Height="40"
                                >
                                <SymbolIcon Symbol="Edit"/>
                            </Button>
                            <Button 
                                Click="btn_Supp_Click"
                                HorizontalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="5"
                                FontSize="19"
                                Width="150" Height="40"
                                >
                                <SymbolIcon Symbol="Delete" Foreground="Red"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            x:Name="titre_modifier"
            FontSize="35"
            HorizontalAlignment="Center"
            Margin="5 25 5 5"
            >
            Modifier une activité
        </TextBlock>

        <StackPanel 
            Grid.Row="1" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox
                x:Name="tbxModifier_nom_activite"
                Header="Nom de l'activité:"
                Margin="5"
                Width="280" Height="75"
                FontSize="18"
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock
                x:Name="nom_activiteErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="2" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <ComboBox
                x:Name="cbxModifier_type"
                Header="Catégorie:"
                Margin="5"
                Width="280" Height="75"
                FontSize="18" 
                >
            </ComboBox>
            <TextBlock
                x:Name="typeErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="3" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox
                x:Name="tbxModifier_description"
                Header="Description de l'activité:"
                Margin="5"
                Width="280" Height="100"
                FontSize="18"
                PlaceholderForeground="DarkGray"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                >
            </TextBox>
            <TextBlock
                x:Name="descriptionErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="4" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox
                x:Name="tbxModifier_cout_organisation"
                Header="Coût d'organisation:"
                Margin="5"
                Width="280" Height="75"
                FontSize="18"
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock
                x:Name="cout_organisationErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <StackPanel 
            Grid.Row="5" Grid.Column="2"
            HorizontalAlignment="Center"
            >
            <TextBox
                x:Name="tbxModifier_prix_vente_client"
                Header="Prix de vente par client:"
                Margin="5"
                Width="280" Height="75"
                FontSize="18"
                PlaceholderForeground="DarkGray"
                >
            </TextBox>
            <TextBlock
                x:Name="prix_vente_clientErrModifier"
                FontSize="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Foreground="DarkRed"
                >
            </TextBlock>
        </StackPanel>

        <Button
            Grid.Row="6"
            Grid.Column="2"
            Width="100" Height="40"
            HorizontalAlignment="Center"
            Click="modifier_btn_Click"
            FontSize="15"
            >
            <SymbolIcon Symbol="Edit"/>
        </Button>
    </Grid>
</Page>